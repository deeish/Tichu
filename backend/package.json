{
  "name": "tichu-backend",
  "version": "1.0.0",
  "description": "Backend server for Tichu card game",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:bots": "node tests/bots/botTestRunner.js"
  },
  "keywords": ["tichu", "card-game", "multiplayer"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.6.1",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "game/**/*.js",
      "!game/**/*.test.js"
    ]
  }
}
